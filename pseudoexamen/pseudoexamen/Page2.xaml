<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pseudoexamen.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblusuario" HorizontalOptions="End" TextColor="red" FontSize="16"/>
            <Label Text="Ventana 2" HorizontalTextAlignment="Center" FontSize="20"/>
            <Entry x:Name="txtdato" Placeholder="Dato" Keyboard="Numeric" TextChanged="txtdato_TextChanged"/>
            <Picker Title="Estudiantes" x:Name="pkEstudiantes">
                <Picker.Items>
                    <x:String>Carlos</x:String>
                    <x:String>Daniel</x:String>
                    <x:String>Cristian</x:String>
                    
                </Picker.Items>
            </Picker>
            <Button x:Name="btnAbrir" Text="Abrir" Clicked="btnAbrir_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>